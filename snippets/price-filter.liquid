{%- doc -%}
  Renders a price filter with dual range sliders.

  @param {object} filter - The filter object to render.
  @param {string} filter_style - The filter style, can be 'horizontal' or 'vertical'.
  @param {boolean} [autofocus] - Whether to autofocus the filter.
  @param {boolean} [should_render_clear] - Whether to render the clear button.

  @example
  {% render 'price-filter', filter: filter, filter_style: 'vertical' %}
{%- enddoc -%}

<accordion-custom
  class="facets__item"
  {% if filter_style == 'horizontal' %}
    data-disable-animation-on-desktop="true"
    data-close-with-escape="true"
  {% endif %}

  open-by-default-on-mobile
  {% if filter_style == 'vertical' %}
    open
    open-by-default-on-desktop
  {% endif %}
>
  <details
    class="facets__panel"
    {% if filter_style == 'horizontal' %}
      data-auto-close-details="desktop"
    {% endif %}
  >
    <summary class="facets__summary">
      <span class="facets__label">{{ filter.label }}</span>
      <facet-status-component class="facets__status">
        <template ref="moneyFormat">{{ shop.money_format }}</template>

        <span
          class="hide-when-empty"
          ref="facetStatus"
          data-currency="{{ localization.country.currency.iso_code }}"
          data-range-max="{{ filter.range_max }}"
        >
          {%- if filter.min_value.value != null or filter.max_value.value != null %}
            {%- if filter.min_value.value != null and filter.max_value.value != null %}
              {{- filter.min_value.value | money | strip_html -}}
              –
              {{- filter.max_value.value | money | strip_html -}}
            {%- elsif filter.min_value.value != null -%}
              {{ filter.min_value.value | money | strip_html }}–{{ filter.range_max | money | strip_html }}

            {%- elsif filter.max_value.value != null -%}
              {{- 0 | money | strip_html -}}
              –
              {{- filter.max_value.value | money | strip_html -}}
            {%- endif -%}
          {%- endif -%}
        </span>
      </facet-status-component>
      <span class="svg-wrapper icon-plus icon-animated">
        {{- 'icon-plus.svg' | inline_asset_content -}}
      </span>
    </summary>
    <floating-panel-component
      {% unless filter_style == 'vertical' %}
        data-close-on-resize
      {% endunless %}
      class="facets__panel-content details-content{% if filter_style == 'horizontal' %} color-{{ settings.popover_color_scheme }}{% endif %}"
    >
      {% assign min_input_max_value = filter.max_value.value | default: filter.range_max %}
      {% assign max_input_min_value = filter.min_value.value | default: 0 %}

      <price-facet-component
        class="price-facet"
        id="facet-inputs-{{ filter.param_name | escape | replace: '.', '-' }}"
        on:change="/updatePriceFilterAndResults"
      >
        <div class="price-facet__slider-wrapper">
          <div class="price-facet__slider-track" ref="sliderTrack">
            <div class="price-facet__slider-range" ref="sliderRange"></div>
          </div>
          
          <input
            class="price-facet__slider price-facet__slider--min"
            name="{{ filter.min_value.param_name }}"
            id="{{ filter.label | escape }}-GTE"
            {%- if filter.min_value.value -%}
              value="{{ filter.min_value.value | money_without_currency | remove: ',' | remove: ' ' }}"
            {%- else -%}
              value="0"
            {%- endif -%}
            type="range"
            min="0"
            max="{{ filter.range_max | money_without_currency | remove: ',' | remove: ' ' }}"
            step="1"
            ref="minInput"
            autocomplete="off"
            {% if autofocus %}
              autofocus
            {% endif %}
          >
          
          <input
            class="price-facet__slider price-facet__slider--max"
            name="{{ filter.max_value.param_name }}"
            id="{{ filter.label | escape }}-LTE"
            {%- if filter.max_value.value -%}
              value="{{ filter.max_value.value | money_without_currency | remove: ',' | remove: ' ' }}"
            {%- else -%}
              value="{{ filter.range_max | money_without_currency | remove: ',' | remove: ' ' }}"
            {%- endif -%}
            type="range"
            min="0"
            max="{{ filter.range_max | money_without_currency | remove: ',' | remove: ' ' }}"
            step="1"
            ref="maxInput"
            autocomplete="off"
            {% if autofocus %}
              autofocus
            {% endif %}
          >
        </div>

        <div class="price-facet__values">
          <div class="price-facet__value price-facet__value--min">
            <span class="price-facet__currency">{{ cart.currency.symbol }}</span>
            <span ref="minDisplay">
              {%- if filter.min_value.value -%}
                {{ filter.min_value.value | money_without_currency }}
              {%- else -%}
                0
              {%- endif -%}
            </span>
          </div>
          
          <div class="price-facet__value price-facet__value--max">
            <span class="price-facet__currency">{{ cart.currency.symbol }}</span>
            <span ref="maxDisplay">
              {%- if filter.max_value.value -%}
                {{ filter.max_value.value | money_without_currency }}
              {%- else -%}
                {{ filter.range_max | money_without_currency }}
              {%- endif -%}
            </span>
          </div>
        </div>

        {% if filter.min_value.value != null or filter.max_value.value != null %}
          {% assign has_active_values = true %}
        {% endif %}

        {% if should_render_clear %}
          <facet-clear-component
            class="clear-filter"
            tabindex="{% if has_active_values %}0{% else %}-1{% endif %}"
            on:click="/clearFilter"
            on:keydown="/clearFilter"
          >
            <div
              class="facets__clear {% if has_active_values %}facets__clear--active{% endif %}"
              ref="clearButton"
            >
              {{- 'actions.clear' | t -}}
            </div>
          </facet-clear-component>
        {% endif %}
      </price-facet-component>
    </floating-panel-component>
  </details>
</accordion-custom>

{% stylesheet %}
  /* Price filter */
  .price-facet {
    container-type: inline-size;
    display: flex;
    flex-direction: column;
    padding: var(--padding-md) 0;
  }

  .facets--horizontal .facets__panel-content:has(.price-facet) {
    min-width: 360px;
  }

  /* Slider wrapper */
  .price-facet__slider-wrapper {
    position: relative;
    height: 40px;
    margin: 20px 0;
  }

  /* Slider track */
  .price-facet__slider-track {
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    height: 4px;
    background-color: #e5e5e5;
    transform: translateY(-50%);
    border-radius: 2px;
  }

  /* Active range */
  .price-facet__slider-range {
    position: absolute;
    height: 100%;
    background-color: #000;
    border-radius: 2px;
  }

  /* Range inputs */
  .price-facet__slider {
    position: absolute;
    top: 50%;
    left: 0;
    width: 100%;
    height: 4px;
    transform: translateY(-50%);
    -webkit-appearance: none;
    appearance: none;
    background: black;
    pointer-events: none;
    margin: 0;
  }

  /* Remove default styling */
  .price-facet__slider::-webkit-slider-runnable-track {
    height: 4px;
    background: black;
  }

  .price-facet__slider::-moz-range-track {
    height: 4px;
    background: black;
  }

  /* Thumb styling - WebKit */
  .price-facet__slider::-webkit-slider-thumb {
    -webkit-appearance: none;
    appearance: none;
    width: 18px;
    height: 18px;
    background-color: black;
    border: 2px solid #fff;
    cursor: pointer;
    pointer-events: auto;
    box-shadow: 0 1px 4px rgba(0, 0, 0, 0.2);
    transition: transform 0.1s ease;
    margin-top: -7px;
  }

  .price-facet__slider::-webkit-slider-thumb:hover {
    transform: scale(1.1);
  }

  .price-facet__slider::-webkit-slider-thumb:active {
    transform: scale(1.05);
  }

  /* Thumb styling - Firefox */
  .price-facet__slider::-moz-range-thumb {
    width: 18px;
    height: 18px;
    background-color: black;
    border: 2px solid black;
    border-radius: 2px;
    cursor: pointer;
    pointer-events: auto;
    box-shadow: 0 1px 4px rgba(0, 0, 0, 0.2);
    transition: transform 0.1s ease;
  }

  .price-facet__slider::-moz-range-thumb:hover {
    transform: scale(1.1);
  }

  .price-facet__slider::-moz-range-thumb:active {
    transform: scale(1.05);
  }

  /* Focus styles */
  .price-facet__slider:focus {
    outline: none;
  }

  .price-facet__slider:focus::-webkit-slider-thumb {
    box-shadow: 0 0 0 3px rgba(0, 0, 0, 0.1), 0 1px 4px rgba(0, 0, 0, 0.2);
  }

  .price-facet__slider:focus::-moz-range-thumb {
    box-shadow: 0 0 0 3px rgba(0, 0, 0, 0.1), 0 1px 4px rgba(0, 0, 0, 0.2);
  }

  /* Ensure max slider is above min slider */
  .price-facet__slider--max {
    z-index: 2;
  }

  /* Values display */
  .price-facet__values {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: var(--gap-md);
    margin-top: var(--padding-sm);
  }

  .price-facet__value {
    display: flex;
    align-items: baseline;
    gap: 4px;
    font-size: var(--font-paragraph--size);
    font-weight: 500;
  }

  .price-facet__currency {
    opacity: 0.6;
  }

  .price-facet__value--min {
    text-align: left;
  }

  .price-facet__value--max {
    text-align: right;
  }

  /* Clear button spacing */
  .price-facet .clear-filter {
    margin-top: var(--padding-md);
  }
{% endstylesheet %}