  [product-grid-view='zoom-out'] .card-gallery .product-card-gallery__title-placeholder {
    /* stylelint-disable-next-line declaration-no-important */
    padding: var(--padding-xs) !important;
    font-size: var(--font-size--xs);
  }

  [product-grid-view='zoom-out'] .card-gallery .slideshow-control {
    min-width: auto;
  }

  /* Overlay controls (dots + chevrons) over the media for card-gallery */
  .card-gallery {
    position: relative;
  }

  .card-gallery slideshow-controls {
    position: absolute;
    left: 0;
    right: 0;
    bottom: var(--padding-sm);
    display: flex;
    justify-content: center;
    z-index: calc(var(--layer-heightened) + 2);
    pointer-events: auto;
    transform: translateZ(0);
  }

  .card-gallery .slideshow-controls__dots {
    background: transparent;
    padding: 0;
  }

  .card-gallery .slideshow-controls__dots button {
    /* light grey by default, white when active */
    --color: rgba(255,255,255,0.5);
    --color-active: rgba(255,255,255,1);
  }

  /* light grey by default, white when active */
  .card-gallery .slideshow-controls__dots button {
    --color: rgba(255,255,255,0.5);
    --color-active: rgba(255,255,255,1);
  }

  /* Ensure arrows are visible on card gallery and clickable */
  .card-gallery slideshow-arrows {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 var(--padding-md);
    z-index: calc(var(--layer-above) + 3);
    pointer-events: auto;
    mix-blend-mode: normal; /* avoid blend making arrows invisible on some images */
  }

  /* Make sure arrow buttons are shown (override global hide rules) */
  .card-gallery slideshow-arrows .slideshow-control {
    opacity: 1 !important;
    pointer-events: auto !important;
    color: #fff;
  }

  /* Ensure arrow icon fill/foreground is visible on top of images */
  .card-gallery .slideshow-control .svg-wrapper {
    color: #fff;
  }

  /* Extra safety: ensure arrows sit above slides and SVGs are filled */
  .card-gallery slideshow-arrows {
    z-index: 99999 !important;
    position: absolute !important;
  }

  .card-gallery slideshow-arrows .slideshow-control svg {
    fill: currentColor !important;
    display: block !important;
    visibility: visible !important;
  }

  /* If the slideshow component is rendered with `disabled="true"` (common for
     card galleries when carousel is disabled), the base stylesheet hides the
     arrows. Override that here so arrows still display for card-gallery. */
  .card-gallery slideshow-component[disabled='true'] slideshow-arrows {
    display: flex !important;
    mix-blend-mode: normal;
  }

  .card-gallery slideshow-component[disabled='true'] slideshow-arrows .slideshow-control {
    display: inline-flex !important;
    opacity: 1 !important;
    pointer-events: auto !important;
    color: #fff !important;
  }
@media screen and (max-width: 749px) {
  .card-gallery slideshow-component[disabled='true'] slideshow-arrows {
    display: none !important;
  }
}

  /* Stronger rule to ensure the active dot is white in all contexts */
  .card-gallery .slideshow-controls__dots button[aria-selected='true']::after {
    background-color: rgba(255,255,255,1) !important;
  }
