{% javascript %}
  (function() {
    function initChildSlideshow(cardGallery) {
      const innerSlideshow = cardGallery.querySelector('slideshow-component');
      if (!innerSlideshow) return;

      // Remove the disabled attribute to enable scrolling
      innerSlideshow.removeAttribute('disabled');
      
      // Re-initialize the slideshow if it has an init method
      if (typeof innerSlideshow.init === 'function') {
        innerSlideshow.init();
      }

      // Stop all touch/pointer/mouse events from bubbling to prevent outer carousel from capturing them
      const stopPropagation = (e) => e.stopPropagation();
      
      innerSlideshow.addEventListener('touchstart', stopPropagation, { passive: true, capture: true });
      innerSlideshow.addEventListener('touchmove', stopPropagation, { passive: true, capture: true });
      innerSlideshow.addEventListener('touchend', stopPropagation, { passive: true, capture: true });
      innerSlideshow.addEventListener('pointerdown', stopPropagation, { capture: true });
      innerSlideshow.addEventListener('pointermove', stopPropagation, { capture: true });
      innerSlideshow.addEventListener('pointerup', stopPropagation, { capture: true });
      innerSlideshow.addEventListener('mousedown', stopPropagation, { capture: true });
      innerSlideshow.addEventListener('mousemove', stopPropagation, { capture: true });
      innerSlideshow.addEventListener('mouseup', stopPropagation, { capture: true });
    }

    // Apply to all current card galleries
    document.querySelectorAll('.card-gallery').forEach(initChildSlideshow);

    // Watch for new ones (e.g., if you use infinite scroll or filters)
    new MutationObserver((mutations) => {
      mutations.forEach((mutation) => {
        mutation.addedNodes.forEach((node) => {
          if (node.nodeType === 1) {
            if (node.classList.contains('card-gallery')) {
              initChildSlideshow(node);
            } else {
              node.querySelectorAll('.card-gallery').forEach(initChildSlideshow);
            }
          }
        });
      });
    }).observe(document.body, { childList: true, subtree: true });
  })();
{% endjavascript %}