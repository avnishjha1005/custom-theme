{% endstyle %}

<shop-the-look-{{ ai_gen_id }} class="ai-shop-look-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-shop-look-container-{{ ai_gen_id }}">
    <div class="ai-shop-look-image-section-{{ ai_gen_id }}">
      {% if block.settings.main_image %}
        <img
          src="{{ block.settings.main_image | image_url: width: 1200 }}"
          alt="{{ block.settings.main_image.alt | escape }}"
          class="ai-shop-look-main-image-{{ ai_gen_id }}"
          loading="lazy"
          width="{{ block.settings.main_image.width }}"
          height="{{ block.settings.main_image.height }}"
        >
      {% else %}
        <div class="ai-shop-look-image-placeholder-{{ ai_gen_id }}">
          {{ 'lifestyle-1' | placeholder_svg_tag }}
        </div>
      {% endif %}

      {% for i in (1..5) %}
        {% liquid
          assign product_key = 'product_' | append: i
          assign x_key = 'hotspot_' | append: i | append: '_x'
          assign y_key = 'hotspot_' | append: i | append: '_y'
          assign product = block.settings[product_key]
          assign x_pos = block.settings[x_key]
          assign y_pos = block.settings[y_key]
        %}

        {% if product != blank %}
          <div
            class="ai-shop-look-hotspot-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}"
            style="left: {{ x_pos }}%; top: {{ y_pos }}%;"
            data-product-index="{{ i }}"
          >
            <button
              class="ai-shop-look-hotspot-button-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}"
              aria-label="View {{ product.title }}"
            >
              <svg class="ai-shop-look-hotspot-icon-{{ ai_gen_id }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
                <line x1="12" y1="8" x2="12" y2="16"></line>
                <line x1="8" y1="12" x2="16" y2="12"></line>
              </svg>
            </button>
          </div>
        {% endif %}
      {% endfor %}
    </div>

    <div class="ai-shop-look-product-section-{{ ai_gen_id }}">
      {% assign has_products = false %}
      {% for i in (1..5) %}
        {% liquid
          assign product_key = 'product_' | append: i
          assign product = block.settings[product_key]
        %}
        {% if product != blank %}
          {% assign has_products = true %}
        {% endif %}
      {% endfor %}

      {% if has_products %}
        {% for i in (1..5) %}
          {% liquid
            assign product_key = 'product_' | append: i
            assign product = block.settings[product_key]
          %}

          {% if product != blank %}
            <div class="ai-shop-look-product-card-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}" data-product-index="{{ i }}">
              <div class="ai-shop-look-product-image-wrapper-{{ ai_gen_id }}">
                {% if product.featured_image %}
                  <img
                    src="{{ product.featured_image | image_url: width: 600 }}"
                    alt="{{ product.featured_image.alt | escape }}"
                    class="ai-shop-look-product-image-{{ ai_gen_id }}"
                    loading="lazy"
                    width="600"
                    height="600"
                  >
                {% endif %}
              </div>

              <div>
                <h3 class="ai-shop-look-product-title-{{ ai_gen_id }}">{{ product.title }}</h3>
                <p class="ai-shop-look-product-price-{{ ai_gen_id }}">{{ product.price | money }}</p>
              </div>

              {% if product.has_only_default_variant == false %}
                <div class="ai-shop-look-variant-selector-{{ ai_gen_id }}">
                  {% for option in product.options_with_values %}
                    <div>
                      <div class="ai-shop-look-variant-label-{{ ai_gen_id }}">{{ option.name }}</div>
                      <div class="ai-shop-look-variant-options-{{ ai_gen_id }}">
                        {% for value in option.values %}
                          <button
                            class="ai-shop-look-variant-option-{{ ai_gen_id }} {% if forloop.first %}selected{% endif %}"
                            data-option-position="{{ option.position }}"
                            data-option-value="{{ value | escape }}"
                          >
                            {{ value }}
                          </button>
                        {% endfor %}
                      </div>
                    </div>
                  {% endfor %}
                </div>
              {% endif %}

              <div class="ai-shop-look-quantity-selector-{{ ai_gen_id }}">
                <span class="ai-shop-look-quantity-label-{{ ai_gen_id }}">Quantity</span>
                <div class="ai-shop-look-quantity-controls-{{ ai_gen_id }}">
                  <button class="ai-shop-look-quantity-button-{{ ai_gen_id }}" data-action="decrease" aria-label="Decrease quantity">âˆ’</button>
                  <input type="number" class="ai-shop-look-quantity-input-{{ ai_gen_id }}" value="1" min="1" readonly>
                  <button class="ai-shop-look-quantity-button-{{ ai_gen_id }}" data-action="increase" aria-label="Increase quantity">+</button>
                </div>
              </div>

              <button
                class="ai-shop-look-add-to-cart-{{ ai_gen_id }}"
                data-product-id="{{ product.id }}"
                data-variant-id="{{ product.selected_or_first_available_variant.id }}"
              >
                Add to Cart
              </button>

              {% if product.description != blank %}
                <div class="ai-shop-look-product-description-{{ ai_gen_id }}">
                  {{ product.description | truncate: 200 }}
                </div>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
      {% else %}
        <div class="ai-shop-look-empty-state-{{ ai_gen_id }}">
          Add products to create your Shop the Look section
        </div>
      {% endif %}
    </div>
  </div>
</shop-the-look-{{ ai_gen_id }}>

<script>
  (function() {
    class ShopTheLook{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentProductIndex = 1;
      }

      connectedCallback() {
        this.hotspots = this.querySelectorAll('.ai-shop-look-hotspot-{{ ai_gen_id }}');
        this.productCards = this.querySelectorAll('.ai-shop-look-product-card-{{ ai_gen_id }}');
        this.setupHotspots();
        this.setupVariantSelectors();
        this.setupQuantityControls();
        this.setupAddToCart();
      }

      setupHotspots() {
        this.hotspots.forEach((hotspot) => {
          const button = hotspot.querySelector('.ai-shop-look-hotspot-button-{{ ai_gen_id }}');
          button.addEventListener('click', () => {
            const productIndex = hotspot.dataset.productIndex;
            this.switchProduct(productIndex);
          });
        });
      }

      switchProduct(index) {
        this.hotspots.forEach((hotspot) => {
          const button = hotspot.querySelector('.ai-shop-look-hotspot-button-{{ ai_gen_id }}');
          if (hotspot.dataset.productIndex === index) {
            button.classList.add('active');
          } else {
            button.classList.remove('active');
          }
        });

        this.productCards.forEach((card) => {
          if (card.dataset.productIndex === index) {
            card.classList.add('active');
          } else {
            card.classList.remove('active');
          }
        });

        this.currentProductIndex = index;
      }

      setupVariantSelectors() {
        this.productCards.forEach((card) => {
          const variantOptions = card.querySelectorAll('.ai-shop-look-variant-option-{{ ai_gen_id }}');
          const addToCartButton = card.querySelector('.ai-shop-look-add-to-cart-{{ ai_gen_id }}');

          variantOptions.forEach((option) => {
            option.addEventListener('click', () => {
              const optionPosition = option.dataset.optionPosition;
              const siblings = card.querySelectorAll(`[data-option-position="${optionPosition}"]`);
              
              siblings.forEach((sibling) => sibling.classList.remove('selected'));
              option.classList.add('selected');

              this.updateVariant(card, addToCartButton);
            });
          });
        });
      }

      updateVariant(card, addToCartButton) {
        const selectedOptions = card.querySelectorAll('.ai-shop-look-variant-option-{{ ai_gen_id }}.selected');
        const productId = addToCartButton.dataset.productId;
        
        const optionValues = Array.from(selectedOptions).map((opt) => opt.dataset.optionValue);
        
        fetch(`/products/${productId}.js`)
          .then((response) => response.json())
          .then((product) => {
            const variant = product.variants.find((v) => {
              return optionValues.every((value, index) => v.options[index] === value);
            });

            if (variant) {
              addToCartButton.dataset.variantId = variant.id;
              addToCartButton.disabled = !variant.available;
              
              const priceElement = card.querySelector('.ai-shop-look-product-price-{{ ai_gen_id }}');
              if (priceElement) {
                priceElement.textContent = new Intl.NumberFormat('en-US', {
                  style: 'currency',
                  currency: '{{ cart.currency.iso_code }}'
                }).format(variant.price / 100);
              }
            }
          });
      }

      setupQuantityControls() {
        this.productCards.forEach((card) => {
          const quantityInput = card.querySelector('.ai-shop-look-quantity-input-{{ ai_gen_id }}');
          const buttons = card.querySelectorAll('.ai-shop-look-quantity-button-{{ ai_gen_id }}');

          buttons.forEach((button) => {
            button.addEventListener('click', () => {
              const action = button.dataset.action;
              let currentValue = parseInt(quantityInput.value);

              if (action === 'increase') {
                quantityInput.value = currentValue + 1;
              } else if (action === 'decrease' && currentValue > 1) {
                quantityInput.value = currentValue - 1;
              }
            });
          });
        });
      }

      setupAddToCart() {
        this.productCards.forEach((card) => {
          const addToCartButton = card.querySelector('.ai-shop-look-add-to-cart-{{ ai_gen_id }}');
          const quantityInput = card.querySelector('.ai-shop-look-quantity-input-{{ ai_gen_id }}');

          addToCartButton.addEventListener('click', () => {
            const variantId = addToCartButton.dataset.variantId;
            const quantity = parseInt(quantityInput.value);

            const formData = {
              items: [{
                id: variantId,
                quantity: quantity
              }]
            };

            fetch('/cart/add.js', {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json',
              },
              body: JSON.stringify(formData)
            })
            .then((response) => response.json())
            .then((data) => {
              window.location.href = '/cart';
            })
            .catch((error) => {
              console.error('Error:', error);
            });
          });
        });
      }
    }

    customElements.define('shop-the-look-{{ ai_gen_id }}', ShopTheLook{{ ai_gen_id }});
  })();
</script>

