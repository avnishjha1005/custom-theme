    font-weight: 500;
    color: {{ block.settings.product_text_color }};
  }

  .ai-shop-look-quantity-controls-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    border: 1px solid {{ block.settings.variant_border_color }};
  }

  .ai-shop-look-quantity-button-{{ ai_gen_id }} {
    width: 36px;
    height: 36px;
    border: none;
    background-color: {{ block.settings.variant_bg_color }};
    color: {{ block.settings.product_text_color }};
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-color 0.2s ease;
  }

  .ai-shop-look-quantity-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.variant_hover_bg_color }};
  }

  .ai-shop-look-quantity-input-{{ ai_gen_id }} {
