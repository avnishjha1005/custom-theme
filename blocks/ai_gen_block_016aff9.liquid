{% doc %}
  @prompt
    Create a "shop the look" section. The main image has pulsing hotspots, clicking on the hotspots reveals the product to the side of the main image. 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-shop-look-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: 40px 20px;
  }

  .ai-shop-look-container-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 350px;
    gap: 40px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-shop-look-main-image-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: 3 / 4;
    overflow: hidden;
  }

  .ai-shop-look-main-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-shop-look-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-shop-look-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 400px;
    max-height: 400px;
  }

  .ai-shop-look-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-shop-look-hotspot-{{ ai_gen_id }} {
    position: absolute;
    z-index: 2;
  }

  .ai-shop-look-hotspot-button-{{ ai_gen_id }} {
    width: {{ block.settings.hotspot_size }}px;
    height: {{ block.settings.hotspot_size }}px;
    border-radius: 50%;
    background-color: {{ block.settings.hotspot_color }};
    border: 2px solid {{ block.settings.hotspot_border_color }};
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    transition: transform 0.3s ease;
  }

  .ai-shop-look-hotspot-button-{{ ai_gen_id }}:hover {
    transform: scale(1.1);
  }

  .ai-shop-look-hotspot-button-{{ ai_gen_id }}::before {
    content: '';
    position: absolute;
    width: 100%;
    height: 100%;
    border-radius: 50%;
    background-color: {{ block.settings.hotspot_color }};
    opacity: 0.4;
    animation: ai-shop-look-pulse-{{ ai_gen_id }} 2s infinite;
  }

  @keyframes ai-shop-look-pulse-{{ ai_gen_id }} {
    0% {
      transform: scale(1);
      opacity: 0.4;
    }
    50% {
      transform: scale(1.5);
      opacity: 0;
    }
    100% {
      transform: scale(1);
      opacity: 0;
    }
  }

  .ai-shop-look-hotspot-inner-{{ ai_gen_id }} {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background-color: {{ block.settings.hotspot_border_color }};
    position: relative;
    z-index: 1;
  }

  .ai-shop-look-products-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .ai-shop-look-product-card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background }};
    border: 1px solid {{ block.settings.card_border_color }};
    padding: 16px;
    opacity: 0.3;
    transition: opacity 0.3s ease, transform 0.3s ease;
    cursor: pointer;
  }

  .ai-shop-look-product-card-{{ ai_gen_id }}.active {
    opacity: 1;
    transform: translateX(-4px);
    border-color: {{ block.settings.card_active_border }};
  }

  .ai-shop-look-product-content-{{ ai_gen_id }} {
    display: flex;
    gap: 16px;
  }

  .ai-shop-look-product-image-{{ ai_gen_id }} {
    width: 80px;
    height: 80px;
    flex-shrink: 0;
  }

  .ai-shop-look-product-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-shop-look-product-info-{{ ai_gen_id }} {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .ai-shop-look-product-title-{{ ai_gen_id }} {
    font-size: 16px;
    font-weight: 600;
    color: {{ block.settings.text_color }};
    margin: 0;
  }

  .ai-shop-look-product-price-{{ ai_gen_id }} {
    font-size: 14px;
    color: {{ block.settings.text_color }};
  }

  .ai-shop-look-product-link-{{ ai_gen_id }} {
    display: inline-block;
    margin-top: 8px;
    padding: 8px 16px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    font-size: 12px;
    text-transform: uppercase;
    transition: background-color 0.3s ease;
  }

  .ai-shop-look-product-link-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
  }

  .ai-shop-look-empty-product-{{ ai_gen_id }} {
    padding: 20px;
    text-align: center;
    color: #999;
    font-style: italic;
    font-size: 14px;
  }

  @media screen and (max-width: 989px) {
    .ai-shop-look-container-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 30px;
    }

    .ai-shop-look-products-{{ ai_gen_id }} {
      flex-direction: row;
      overflow-x: auto;
      gap: 16px;
    }

    .ai-shop-look-product-card-{{ ai_gen_id }} {
      min-width: 280px;
    }
  }

  @media screen and (max-width: 749px) {
    .ai-shop-look-hotspot-button-{{ ai_gen_id }} {
      width: {{ block.settings.hotspot_size | times: 0.8 }}px;
      height: {{ block.settings.hotspot_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<shop-the-look-{{ ai_gen_id }}
  class="ai-shop-look-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-shop-look-container-{{ ai_gen_id }}">
    <div class="ai-shop-look-main-image-{{ ai_gen_id }}">
      {% if block.settings.main_image %}
        <img
          src="{{ block.settings.main_image | image_url: width: 1200 }}"
          alt="{{ block.settings.main_image.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.main_image.width }}"
          height="{{ block.settings.main_image.height }}"
        >
      {% else %}
        <div class="ai-shop-look-image-placeholder-{{ ai_gen_id }}">
          {{ 'hero-apparel-1' | placeholder_svg_tag }}
          <div class="ai-shop-look-empty-state-{{ ai_gen_id }}">
            Add a main image to get started
          </div>
        </div>
      {% endif %}

      {% for i in (1..3) %}
        {% liquid
          assign hotspot_enabled_key = 'hotspot_' | append: i | append: '_enabled'
          assign hotspot_x_key = 'hotspot_' | append: i | append: '_x'
          assign hotspot_y_key = 'hotspot_' | append: i | append: '_y'
          assign product_key = 'product_' | append: i

          assign hotspot_enabled = block.settings[hotspot_enabled_key]
          assign hotspot_x = block.settings[hotspot_x_key]
          assign hotspot_y = block.settings[hotspot_y_key]
          assign product = block.settings[product_key]
        %}

        {% if hotspot_enabled %}
          <div
            class="ai-shop-look-hotspot-{{ ai_gen_id }}"
            style="left: {{ hotspot_x }}%; top: {{ hotspot_y }}%;"
            data-hotspot-index="{{ i }}"
          >
            <button
              class="ai-shop-look-hotspot-button-{{ ai_gen_id }}"
              aria-label="View product {{ i }}"
              data-product-index="{{ i }}"
            >
              <span class="ai-shop-look-hotspot-inner-{{ ai_gen_id }}"></span>
            </button>
          </div>
        {% endif %}
      {% endfor %}
    </div>

    <div class="ai-shop-look-products-{{ ai_gen_id }}">
      {% for i in (1..3) %}
        {% liquid
          assign hotspot_enabled_key = 'hotspot_' | append: i | append: '_enabled'
          assign product_key = 'product_' | append: i

          assign hotspot_enabled = block.settings[hotspot_enabled_key]
          assign product = block.settings[product_key]
        %}

        {% if hotspot_enabled %}
          <div
            class="ai-shop-look-product-card-{{ ai_gen_id }}"
            data-product-card="{{ i }}"
          >
            {% if product != blank %}
              <div class="ai-shop-look-product-content-{{ ai_gen_id }}">
                <div class="ai-shop-look-product-image-{{ ai_gen_id }}">
                  {% if product.featured_image %}
                    <img
                      src="{{ product.featured_image | image_url: width: 160 }}"
                      alt="{{ product.featured_image.alt | escape }}"
                      width="160"
                      height="160"
                      loading="lazy"
                    >
                  {% endif %}
                </div>
                <div class="ai-shop-look-product-info-{{ ai_gen_id }}">
                  <h3 class="ai-shop-look-product-title-{{ ai_gen_id }}">{{ product.title }}</h3>
                  <div class="ai-shop-look-product-price-{{ ai_gen_id }}">{{ product.price | money }}</div>
                  <a
                    href="{{ product.url }}"
                    class="ai-shop-look-product-link-{{ ai_gen_id }}"
                  >
                    View product
                  </a>
                </div>
              </div>
            {% else %}
              <div class="ai-shop-look-empty-product-{{ ai_gen_id }}">
                Add a product for hotspot {{ i }}
              </div>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</shop-the-look-{{ ai_gen_id }}>

<script>
  (function() {
    class ShopTheLook{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.hotspotButtons = this.querySelectorAll('.ai-shop-look-hotspot-button-{{ ai_gen_id }}');
        this.productCards = this.querySelectorAll('.ai-shop-look-product-card-{{ ai_gen_id }}');
        this.setupEventListeners();
      }

      setupEventListeners() {
        this.hotspotButtons.forEach((button) => {
          button.addEventListener('click', (e) => {
            const productIndex = button.getAttribute('data-product-index');
            this.activateProduct(productIndex);
          });

          button.addEventListener('mouseenter', (e) => {
            const productIndex = button.getAttribute('data-product-index');
            this.activateProduct(productIndex);
          });
        });

        this.productCards.forEach((card) => {
          card.addEventListener('mouseenter', (e) => {
            const productIndex = card.getAttribute('data-product-card');
            this.activateProduct(productIndex);
          });
        });
      }

      activateProduct(index) {
        this.productCards.forEach((card) => {
          if (card.getAttribute('data-product-card') === index) {
            card.classList.add('active');
          } else {
            card.classList.remove('active');
          }
        });
      }
    }

    customElements.define('shop-the-look-{{ ai_gen_id }}', ShopTheLook{{ ai_gen_id }});
  })();
</script>

