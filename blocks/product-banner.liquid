<div class="product-banner" style="padding: 40px 0;">
  <div class="page-width">
    {% if section.settings.heading != blank %}
      <h2 class="banner-title" style="text-align: center; margin-bottom: 30px;">
        {{ section.settings.heading }}
      </h2>
    {% endif %}

    <div class="product-card-grid" style="display: flex; gap: 20px; justify-content: center; flex-wrap: wrap;">
      {% for block in section.blocks %}
        {% assign product = block.settings.product %}
        <div class="product-card-wrapper" style="flex: 1; min-width: 300px; max-width: 500px;" {{ block.shopify_attributes }}>
          {% if product %}
            {% capture children %}
              <div class="product-card-media">
                <img src="{{ product.featured_image | image_url: 'medium' }}" alt="{{ product.title }}" height="auto" width="auto">
              </div>
              <div class="product-card-details">
                <h3>{{ product.title }}</h3>
                <p>{{ product.price | money }}</p>
                <a href="{{ product.url }}" class="btn btn-primary">View Product</a>
              </div>
            {% endcapture %}

            {% render 'product-card',
              product: product,
              children: children,
              block: block,
              product_card_gap: 20
            %}
          {% else %}
            <div style="border: 1px dashed #ccc; padding: 20px; text-align: center;">
              <p>Select a product to display the card.</p>
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Two Product Banner",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "Featured products" },
    { "type": "text", "id": "badge_text", "label": "Optional badge", "default": "text" }
  ],
  "blocks": [
    {
      "type": "_product-card"
    }
  ],
  "presets": [
    { "name": "Two Product Banner" }
  ]
}
{% endschema %}