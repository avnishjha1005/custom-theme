{% doc %}
  @prompt
    Create a section with text and one image, one desktop the image can be left or right aligned. On mobile we want the text to overlap the image and image be centered. The text has two parts, One quote a separator and a quote author. On mobile the image ends up centered, takes up half height. Make this as configurable and flexible as possible. 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-quote-section-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .ai-quote-section__container-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: {{ block.settings.desktop_gap }}px;
    align-items: {{ block.settings.desktop_vertical_alignment }};
    padding: {{ block.settings.section_padding_top }}px {{ block.settings.section_padding_horizontal }}px {{ block.settings.section_padding_bottom }}px;
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-quote-section__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: 100%;
    {% if block.settings.desktop_image_position == 'left' %}
      order: 1;
    {% else %}
      order: 2;
    {% endif %}
  }

  .ai-quote-section__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-quote-section__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    min-height: {{ block.settings.desktop_min_height }}px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-quote-section__image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 400px;
    max-height: 400px;
  }

  .ai-quote-section__content-{{ ai_gen_id }} {
    {% if block.settings.desktop_image_position == 'left' %}
      order: 2;
    {% else %}
      order: 1;
    {% endif %}
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.text_spacing }}px;
    padding: {{ block.settings.desktop_text_padding }}px;
    background-color: {{ block.settings.text_background_color }};
    border-radius: {{ block.settings.text_border_radius }}px;
  }

  .ai-quote-section__quote-{{ ai_gen_id }} {
    font-size: {{ block.settings.quote_font_size }}px;
    line-height: {{ block.settings.quote_line_height }};
    color: {{ block.settings.quote_color }};
    font-style: {{ block.settings.quote_font_style }};
    font-weight: {{ block.settings.quote_font_weight }};
    margin: 0;
  }

  .ai-quote-section__separator-{{ ai_gen_id }} {
    width: {{ block.settings.separator_width }}px;
    height: {{ block.settings.separator_height }}px;
    background-color: {{ block.settings.separator_color }};
    border-radius: {{ block.settings.separator_border_radius }}px;
    {% if block.settings.separator_alignment == 'left' %}
      margin-left: 0;
      margin-right: auto;
    {% elsif block.settings.separator_alignment == 'center' %}
      margin-left: auto;
      margin-right: auto;
    {% else %}
      margin-left: auto;
      margin-right: 0;
    {% endif %}
  }

  .ai-quote-section__author-{{ ai_gen_id }} {
    font-size: {{ block.settings.author_font_size }}px;
    line-height: {{ block.settings.author_line_height }};
    color: {{ block.settings.author_color }};
    font-weight: {{ block.settings.author_font_weight }};
    margin: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-quote-section__container-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 0;
      padding: 0;
    }

    .ai-quote-section__image-wrapper-{{ ai_gen_id }} {
      order: 1;
      height: {{ block.settings.mobile_image_height }}vh;
      position: relative;
    }

    .ai-quote-section__image-{{ ai_gen_id }} {
      border-radius: 0;
      object-position: center;
    }

    .ai-quote-section__image-placeholder-{{ ai_gen_id }} {
      min-height: {{ block.settings.mobile_image_height }}vh;
      border-radius: 0;
    }

    .ai-quote-section__content-{{ ai_gen_id }} {
      order: 2;
      position: absolute;
      bottom: {{ block.settings.mobile_text_bottom }}px;
      left: {{ block.settings.mobile_text_left }}px;
      right: {{ block.settings.mobile_text_right }}px;
      padding: {{ block.settings.mobile_text_padding }}px;
      z-index: 2;
      background-color: {{ block.settings.mobile_text_background_color }};
      border-radius: {{ block.settings.mobile_text_border_radius }}px;
    }

    .ai-quote-section__quote-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_quote_font_size }}px;
      color: {{ block.settings.mobile_quote_color }};
    }

    .ai-quote-section__author-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_author_font_size }}px;
      color: {{ block.settings.mobile_author_color }};
    }

    .ai-quote-section__separator-{{ ai_gen_id }} {
      background-color: {{ block.settings.mobile_separator_color }};
    }
  }
{% endstyle %}

<div class="ai-quote-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-quote-section__container-{{ ai_gen_id }}">
    <div class="ai-quote-section__image-wrapper-{{ ai_gen_id }}">
      {% if block.settings.image %}
        <img
          src="{{ block.settings.image | image_url: width: 2000 }}"
          alt="{{ block.settings.image.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.image.width }}"
          height="{{ block.settings.image.height }}"
          class="ai-quote-section__image-{{ ai_gen_id }}"
        >
      {% else %}
        <div class="ai-quote-section__image-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
        </div>
      {% endif %}
    </div>

    <div class="ai-quote-section__content-{{ ai_gen_id }}">
      {% if block.settings.quote != blank %}
        <blockquote class="ai-quote-section__quote-{{ ai_gen_id }}">
          {{ block.settings.quote }}
        </blockquote>
      {% endif %}

      {% if block.settings.show_separator %}
        <div class="ai-quote-section__separator-{{ ai_gen_id }}"></div>
      {% endif %}

      {% if block.settings.author != blank %}
        <p class="ai-quote-section__author-{{ ai_gen_id }}">
          {{ block.settings.author }}
        </p>
      {% endif %}
    </div>
  </div>
</div>

