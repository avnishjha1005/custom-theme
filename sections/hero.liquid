          "type": "paragraph",
          "content": "t:content.edit_logo_in_theme_settings"
        },
        {
          "type": "header",
          "content": "t:content.alignment"
        },
        {
          "type": "select",
          "id": "vertical_align",
          "label": "t:settings.vertical_alignment",
          "options": [
            {
              "value": "top",
              "label": "t:options.top"
            },
            {
              "value": "center",
              "label": "t:options.center"
            },
            {
              "value": "bottom",
              "label": "t:options.bottom"
            }
