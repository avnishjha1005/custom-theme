{% comment %} Filename: sections/product-banner.liquid {% endcomment %}

<section class="product-banner-section" role="region" aria-label="{{ section.settings.heading | escape }}">
  <div class="banner-container">
    
    {%- if section.settings.heading != blank or section.settings.subheading != blank -%}
      <header class="banner-header">
        {%- if section.settings.heading != blank -%}
          <h2 class="banner-heading">{{ section.settings.heading }}</h2>
        {%- endif -%}
        {%- if section.settings.subheading != blank -%}
          <p class="banner-subheading">{{ section.settings.subheading }}</p>
        {%- endif -%}
      </header>
    {%- endif -%}

    <div class="banner-grid">
      {%- for block in section.blocks -%}
        {%- assign p = block.settings.product -%}
        
        <article class="banner-card" {{ block.shopify_attributes }}>
          {%- if p != blank -%}
            {% comment %} Product Image {% endcomment %}
            <a href="{{ p.url }}" class="card-image-wrapper">
              <img
                src="{{ p.featured_image | image_url: width: 600 }}"
                alt="{{ p.featured_image.alt | escape }}"
                height="auto"
                width="auto"
                loading="lazy"
                class="product-image"
              >
            </a>

            <div class="card-content">
              <h3 class="product-title">{{ p.title }}</h3>
              
              <div class="product-price">
                <span class="price-current">{{ p.price | money }}</span>
                {%- if p.compare_at_price > p.price -%}
                  <span class="price-old">{{ p.compare_at_price | money }}</span>
                {%- endif -%}
              </div>

              {%- if block.settings.show_cta -%}
                <form method="post" action="/cart/add">
                  <input type="hidden" name="id" value="{{ p.selected_or_first_available_variant.id }}">
                  <button type="submit" class="btn btn-primary">
                    {{ section.settings.cta_text }}
                  </button>
                </form>
              {%- endif -%}
            </div>

          {%- else -%}
            {% comment %} Onboarding/Placeholder State {% endcomment %}
            <div class="card-placeholder">
              {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
              <p>Select a product to display</p>
            </div>
          {%- endif -%}
        </article>
      {%- endfor -%}
    </div>

  </div>
</section>

{% schema %}
{
  "name": "Product Banner",
  "max_blocks": 2,
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Featured Collection"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Add a short description here"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Button Label",
      "default": "Add to Cart"
    }
  ],
  "blocks": [
    {
      "type": "product_card",
      "name": "Product Card",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Select Product"
        },
        {
          "type": "checkbox",
          "id": "show_cta",
          "label": "Show Buy Button",
          "default": true
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Two Product Banner",
      "blocks": [
        { "type": "product_card" },
        { "type": "product_card" }
      ]
    }
  ]
}
{% endschema %}