{% comment %}
  Filename: sections/product-banner.liquid
  Two-product banner rendering via theme snippet API (`render`).
  Replace 'card-product' with your theme’s product card snippet name.
{% endcomment %}

<div class="product-banner" style="padding: 40px 0;">
  <div class="page-width">
    {% if section.settings.heading != blank %}
      <h2 class="banner-title" style="text-align: center; margin-bottom: 30px;">
        {{ section.settings.heading }}
      </h2>
    {% endif %}

    <div class="product-card-grid" style="display: flex; gap: 20px; justify-content: center; flex-wrap: wrap;">
      {% for block in section.blocks %}
        {% assign p = block.settings.product %}
        <div class="product-card-wrapper" style="flex: 1; min-width: 300px; max-width: 500px;" {{ block.shopify_attributes }}>
          {% if p %}
            {%- comment -%}
              Render your theme’s product card snippet.
              Common names: 'card-product', 'product-card', 'product-grid-item'.
              Pass any required params your snippet expects.
            {%- endcomment -%}
            {% render 'product-card',
             product: p,
             children: children
            %}
          {% else %}
            <div style="border: 1px dashed #ccc; padding: 20px; text-align: center;">
              <p>Select a product to display the card.</p>
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Two Product Banner",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Featured products"
    }
  ],
  "blocks": [
    {
      "type": "product_card",
      "name": "Product",
      "limit": 2,
      "settings": [
        { "type": "product", "id": "product", "label": "Product" }
      ]
    }
  ],
  "max_blocks": 2,
  "presets": [
    { "name": "Two Product Banner" }
  ]
}
{% endschema %}
