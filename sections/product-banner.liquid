{% comment %} Filename: sections/product-banner.liquid {% endcomment %}

<div class="product-banner" style="padding: 40px 0;">
  <div class="page-width">
    
    {%- if section.settings.heading != blank -%}
      <h2 class="banner-title" style="text-align: center; margin-bottom: 30px;">
        {{ section.settings.heading }}
      </h2>
    {%- endif -%}
    {% capture children %}
        {% content_for 'blocks', closest.product: product %}
    {% endcapture %}
    {% comment %} The Horizontal Container {% endcomment %}
    <div class="product-card-grid" style="display: flex; gap: 20px; justify-content: center; flex-wrap: wrap;">
      {%- for block in section.blocks -%}
        <div class="product-card-wrapper" style="flex: 1; min-width: 300px; max-width: 500px;" {{ block.shopify_attributes }}>
          
          {%- if block.settings.product != blank -%}
            {% comment %} 
              REPLACING CUSTOM HTML WITH YOUR THEME'S SNIPPET
              Note: Change 'product-card' to 'card-product' if that is your file name
            {% endcomment %}
            {% render 'product-card', children: children
               product: block.settings.product,
            %}
          {%- else -%}
            {% comment %} Fallback for empty blocks in the editor {% endcomment %}
            <div style="border: 1px dashed #ccc; padding: 20px; text-align: center;">
              <p>Select a product to display the card.</p>
            </div>
          {%- endif -%}

        </div>
      {%- endfor -%}
    </div>

  </div>
</div>

{% schema %}
{
  "name": "Two Product Banner",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our Favorites"
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "label": "Show Vendor",
      "default": false
    }
  ],
  "blocks": [
    {
      "type": "product_card_block",
      "name": "Product Card",
      "limit": 2,
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Two Product Banner",
      "blocks": [
        { "type": "product_card_block" },
        { "type": "product_card_block" }
      ]
    }
  ]
}
{% endschema %}