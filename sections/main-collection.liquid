      "id": "mobile_product_card_size",
      "label": "t:settings.mobile_card_size",
      "options": [
        {
          "value": "small",
          "label": "t:options.small"
        },
        {
          "value": "large",
          "label": "t:options.large"
        }
      ],
      "default": "small"
    },
    {
      "type": "range",
      "id": "max_featured_items",
      "label": "Maximum hero products per page",
      "info": "Limit large 2x2 products to prevent layout issues",
      "min": 1,
      "max": 3,
      "step": 1,
      "default": 2
