{% schema %}
{
  "name": "Expert Collage",
  "settings": [
    {
      "type": "header",
      "content": "Text Settings"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Meet our experts for a bespoke look."
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "Description",
      "default": "<p>Nemo enim ipsam voluptatem quia voluptas sit aspernatur aut odit aut fugit, sed quia consequuntur magni dolores eos qui ratione voluptatem.</p>"
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Link Text",
      "default": "BOOK AN APPOINTMENT"
    },
    {
      "type": "url",
      "id": "link_url",
      "label": "Link URL"
    },
    {
      "type": "header",
      "content": "Images"
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Image 1 (Top Left)"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Image 2 (Top Right)"
    },
    {
      "type": "image_picker",
      "id": "image_3",
      "label": "Image 3 (Bottom Left)"
    },
    {
      "type": "image_picker",
      "id": "image_4",
      "label": "Image 4 (Bottom Right)"
    },
    {
      "type": "header",
      "content": "Layout Dimensions"
    },
    {
      "type": "range",
      "id": "desktop_height",
      "min": 300,
      "max": 1200,
      "step": 10,
      "unit": "px",
      "label": "Desktop Minimum Height",
      "default": 700,
      "info": "Total height of the section on desktop."
    },
    {
      "type": "range",
      "id": "mobile_height",
      "min": 400,
      "max": 1200,
      "step": 50,
      "unit": "px",
      "label": "Mobile Minimum Height",
      "default": 600,
      "info": "Total height of the section on mobile."
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#F4F1EC"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#4A3B32"
    }
  ],
  "presets": [
    {
      "name": "Expert Collage",
      "category": "Image"
    }
  ]
}
{% endschema %}

<div class="expert-collage-section" style="background-color: {{ section.settings.bg_color }}; color: {{ section.settings.text_color }}; --desktop-min-height: {{ section.settings.desktop_height }}px; --mobile-min-height: {{ section.settings.mobile_height }}px;">
  <div class="collage-container" style="background-color: {{ section.settings.bg_color }}; color: {{ section.settings.text_color }}; --desktop-min-height: {{ section.settings.desktop_height }}px; --mobile-min-height: {{ section.settings.mobile_height }}px;">
    
    <div class="collage-image-wrapper img-pos-1">
      {% if section.settings.image_1 %}
        <img src="{{ section.settings.image_1 | img_url: '500x' }}" alt="{{ section.settings.image_1.alt }}" loading="lazy" width="auto" height="auto">
      {% else %}
        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
      {% endif %}
    </div>

    <div class="collage-image-wrapper img-pos-2">
      {% if section.settings.image_2 %}
        <img src="{{ section.settings.image_2 | img_url: '300x' }}" alt="{{ section.settings.image_2.alt }}" loading="lazy" width="auto" height="auto">
      {% else %}
        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
      {% endif %}
    </div>

    <div class="collage-content">
      <h2 class="collage-heading">{{ section.settings.heading }}</h2>
      <div class="collage-subheading">{{ section.settings.subheading }}</div>
      {% if section.settings.link_text != blank %}
        <a href="{{ section.settings.link_url }}" class="collage-link">{{ section.settings.link_text }}</a>
      {% endif %}
    </div>

    <div class="collage-image-wrapper img-pos-3">
      {% if section.settings.image_3 %}
        <img src="{{ section.settings.image_3 | img_url: '300x' }}" alt="{{ section.settings.image_3.alt }}" loading="lazy" width="auto" height="auto">
      {% else %}
        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
      {% endif %}
    </div>

    <div class="collage-image-wrapper img-pos-4">
      {% if section.settings.image_4 %}
        <img src="{{ section.settings.image_4 | img_url: '400x' }}" alt="{{ section.settings.image_4.alt }}" loading="lazy" width="auto" height="auto">
      {% else %}
        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
      {% endif %}
    </div>

  </div>
</div>

<style>
  /* Base Layout */
  .expert-collage-section {
    overflow: hidden;
    position: relative;
    width: 100%;
    box-sizing: border-box;
  }
  
  .collage-container {
    margin: 0 auto;
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 360px;
    /* Container takes full height of the section constraints */
  }

  .collage-content {
    text-align: center;
    max-width: 500px;
    /* Ensures text is above images */
    padding: 20px;
    position: relative;
  }

  .collage-heading {
    font-family: var(--font-heading-family, Marcellus);
    font-size: 42px;
    line-height: 1.2;
    margin-bottom: 20px;
    color: inherit;
    font-weight: 400;
  }

  .collage-subheading {
    font-size: 14px;
    line-height: 1.6;
    margin-bottom: 30px;
    color: inherit;
    opacity: 0.9;
  }

  .collage-link {
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-weight: 600;
    color: inherit;
    text-decoration: underline;
    text-underline-offset: 4px;
  }

  /* Universal Image Wrapper Styles */
  .collage-image-wrapper {
    position: absolute;
    z-index: 1;
    overflow: hidden;
  }

  .collage-image-wrapper img,
  .collage-image-wrapper svg {
    width: 100%;
    height: 100%;
    display: block;
    object-fit: cover; /* Ensures images fill the exact pixel dimensions without stretching */
  }

  /* -------------------------
     DESKTOP STYLES
     ------------------------- */
  @media screen and (min-width: 769px) {
    .expert-collage-section {
      min-height: var(--desktop-min-height);
    }

    /* Desktop Positioning */
    .img-pos-1 { top: 0; left: 50px; }
    .img-pos-2 { top: 0; right: 25px; }
    .img-pos-3 { bottom: 0; left: 150px; }
    .img-pos-4 { bottom: 0; right: 165px; }

    /* Desktop Dimensions */
    .img-pos-1 { width: 242px; height: 168px; }
    .img-pos-2 { width: 140px; height: 140px; }
    .img-pos-3 { width: 143px; height: 143px; }
    .img-pos-4 { width: 159px; height: 160px; }

  }

  /* -------------------------
     MOBILE STYLES
     ------------------------- */
  @media screen and (max-width: 1000px) {
    .expert-collage-section {
      padding: 0; 
      height:520px;
    }
        .collage-container{
    height:520px;}

    .collage-heading { font-size: 30px; font-family:"Marcellus"}
    .collage-subheading {font-size:12px;}

    /* Mobile Positioning (Same logic as desktop: 1&2 Top, 3&4 Bottom) */
    .img-pos-1 { top: 0; left: 10px; }
    .img-pos-2 { top: 0; right: 33px; }
    .img-pos-3 { bottom: 0; left: 25px }
    .img-pos-4 { bottom: 0; right: 31px; }

    /* Mobile Specific Dimensions */
    .img-pos-1 { width: 150px; height: 100px; }
    .img-pos-2 { width: 121px; height: 121px; }
    .img-pos-3 { width: 123px; height: 123px; }
    .img-pos-4 { width: 138px; height: 150px; }
  }
</style>